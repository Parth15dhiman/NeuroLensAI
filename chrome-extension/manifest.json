{
  "manifest_version": 3,
  "name": "NeuroLens AI",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:8080/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"], 
      "js": ["libs/sockjs.min.js", "libs/stomp.min.js", "content.js"]
    }
]
}